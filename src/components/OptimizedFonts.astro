---
// Optimized Google Fonts using astro-font
// Replaces render-blocking Google Fonts links with preloaded, optimized fonts
import { AstroFont } from "astro-font";
---

<AstroFont
  config={[
    {
      src: [],
      name: "Inter",
      googleFontsURL: 'https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap',
      preload: true,
      display: "swap",
      selector: "body",
      fallback: "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
    },
  ]}
/>
